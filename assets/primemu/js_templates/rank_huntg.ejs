<script type="text/javascript">
$(document).ready(function(){
	$('#hunt').on("click", function(e){
		e.preventDefault();
		var server = $(this).data('server');
		App.populateRanking('hunt', server);
	});
	$('#huntg').on("click", function(e){
		e.preventDefault();
		var server = $(this).data('server');
		App.populateRanking('huntg', server);
	});
});	
</script>
